{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Dev: Backend + UI",
      "configurations": ["Backend (Uvicorn)", "UI (Streamlit)"]
    }
  ],
  "configurations": [
    {
      "name": "Backend (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/ai-act-sd-poc/backend",
      "args": ["app:app", "--host", "127.0.0.1", "--port", "8000"],
      "env": {
        "DB_URL": "sqlite:///${workspaceFolder}/ai-act-sd-poc/backend/governance.db"
      }
    },
    {
      "name": "UI (Streamlit)",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/ai-act-sd-poc/oversight_ui",
      "args": ["run", "app.py"],
      "env": {
        "DB_URL": "sqlite:///${workspaceFolder}/ai-act-sd-poc/backend/governance.db"
      }
    }
  ]
}
